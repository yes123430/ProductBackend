@model IEnumerable<ProductBackend.Models.ProductModel>

@{
    ViewBag.Title = "水果商行";
}
<!--
    第一種方法是使用 data-interval 單位為毫秒，所以 1000 豪秒一秒，此方法原本的 data-ride="carousel" 就可以不使用。
-->
<div id="container-carousel-Products">
    <div id="carousel-Products" class="carousel slide" data-interval="5000">
        <ol class="carousel-indicators">
            <li data-target="#carousel-Products" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-Products" data-slide-to="1"></li>
            <li data-target="#carousel-Products" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="/FileUploads/banner01.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/FileUploads/banner02.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/FileUploads/banner03.jpg" alt="Third slide">
            </div>
            
            <a class="carousel-control-prev text-danger" href="#carousel-Products" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel-Products" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>

        </div>
    </div>
</div>

<div class="container-fluid mb-2">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col col-12 col-md-6 col-lg-3" >
                <div class="card mt-4">
                    <div class="card-header font-weight-bold">@item.ProdName</div>
                    <div class="cardsaleprice">售價：@item.Price</div>
                    <img class="card-img-top" src="@item.ImagePath" />
                    <div class="card-body  p-2">
                        <p class="overflow-auto mb-0" >@item.ProdDescription</p>
                    </div>
                    <div class="row ml-1 mr-1">
                        <div class="col-6 p-2"><button class="w-100 btn-change">詳細</button></div>
                        <div class="col-6 p-2"><button type="button" class="w-100 btn-change2" onclick="JoinItemForShopCart(@item.ID, 1)" >購物車</button></div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

