@{
    ViewBag.Title = "Product";
}

<h2 class="text-center">Login Form</h2>

<div class="container">
    <form name="form1" method="post" action="/Product/Login">
        <div class="form-group">
            <input id="id" name="id" class="form-control center-block" type="text" placeholder="Username" />
        </div>
        <div class="form-group">
            <input id="ps" name="ps" class="form-control center-block" type="password" placeholder="Password" />
        </div>
        <div class="form-group">
            <input id="btnLogin" name="button" type="submit" class="btn btn-primary center-block" value="Log in" />
        </div>
    </form>
</div>





