@{
    ViewBag.Title = "Product";
}

@Scripts.Render("~/bundles/jquery")

<script type="text/javascript" >
    $(document).ready(function () {
        $("#button").click(function () {
            if ($("#id").val() == "") {
                alert("你尚未填寫 帳號");
                eval("document.form1['id'].focus()");
            } else if ($("#ps").val() == "") {
                alert("你尚未填寫 密碼");
                $("#ps").focus();
            } else {
                document.form1.submit();
            }
        })
    })
</script>

<h2 class="text-center">Login Form</h2>

<div class="container">
    <form name="form1" method="post" action="/Product/Login">
        <div class="form-group">
            <input id="id" name="id" class="form-control center-block" type="text" placeholder="Username" />
        </div>
        <div class="form-group">
            <input id="ps" name="ps" class="form-control center-block" type="password" placeholder="Password" />
        </div>
        <div class="form-group">
            <input id="button" name="button" type="submit" class="btn btn-primary center-block" value="Log in" />
        </div>
    </form>
</div>





